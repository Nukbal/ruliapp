{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext"]
  },
  "include": [
    "app"
  ],
  "exclude": [
    "node_modules",
    "ios",
    "android"
  ]
}
