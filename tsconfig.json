{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "downlevelIteration": true,
    "lib": [
      "esnext"
    ],
    "jsx": "preserve",
    "paths": {
      "components/*": ["./app/components/*"],
      "config/*": ["./app/config/*"],
      "pages/*": ["./app/pages/*"],
      "hooks/*": ["./app/hooks/*"],
      "stores/*": ["./app/stores/*"],
      "styles/*": ["./app/styles/*"],
      "utils/*": ["./app/utils/*"],
    }
  },
  "exclude": [
    "ios",
    "android",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
